<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xavey.woody.activity.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_imageView"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/control_far_margin"
        android:layout_margin="@dimen/control_far_margin"
        android:src="@drawable/ic_logo" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_radiogroup"
        android:orientation="horizontal"
        android:paddingTop="@dimen/control_far_margin"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        >

        <RadioButton
            android:id="@+id/main_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/main_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/main_radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/main_radio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/main_radio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

     </RadioGroup>

    <TextView
        android:id="@+id/tvMainVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/main_radiogroup"
        android:layout_alignRight="@+id/main_radiogroup"
        android:layout_below="@+id/main_radiogroup"
        android:layout_marginTop="@dimen/control_far_margin"
        android:paddingRight="@dimen/control_margin"
        android:text="Version: 0.0.0"
        android:textAlignment="textEnd"
        android:gravity="end"
        />


</RelativeLayout>
