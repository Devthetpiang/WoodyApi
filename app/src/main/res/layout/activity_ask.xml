

        <ScrollView android:id="@+id/ScrollView01"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:fillViewport="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:theme="@style/AppTheme"
                tools:context=".AskActivity"
                android:background="@color/grey_50">

                <EditText
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:minLines="2"
                    android:gravity="center"
                    android:maxLines="3"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:scrollbars="vertical"
                    android:id="@+id/etQustionTitleAsk"
                    android:maxLength="150"
                    android:hint="Enter your question here"
                    android:textColor="@color/primary_dark_material_dark"
                />

                <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
                    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
                    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
                    <!--android:paddingBottom="@dimen/activity_vertical_margin">-->
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/iVPostPic"
                        android:scaleType="fitCenter"
                        android:contentDescription="Question Image"
                        android:layout_marginTop="@dimen/control_far_margin"
                        android:src="@android:drawable/ic_menu_gallery" />
                <TextView
                    android:layout_marginBottom="@dimen/control_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/tvPostPicAsk"
                    android:textAlignment="center"
                    android:text="(optional)" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/rLMultipleAnswerAsk"
                    >
                    <EditText
                        android:id="@+id/etAnswer0Ask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxLength="50"
                        android:hint="Answer 1"
                        android:textColor="@color/primary_dark_material_dark" />
                    <EditText
                        android:id="@+id/etAnswer1Ask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxLength="50"
                        android:hint="Answer 2"
                        android:textColor="@color/primary_dark_material_dark" />
                    <EditText
                        android:id="@+id/etAnswer2Ask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxLength="50"
                        android:hint="Answer 3"
                        android:textColor="@color/primary_dark_material_dark" />
                    <EditText
                        android:id="@+id/etAnswer3Ask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxLength="50"
                        android:hint="Answer 4"
                        android:textColor="@color/primary_dark_material_dark" />
                    <EditText
                        android:id="@+id/etAnswer4Ask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:maxLength="50"
                        android:hint="Answer 5"
                        android:textColor="@color/primary_dark_material_dark" />
                </LinearLayout>


                <TextView
                    android:layout_marginTop="@dimen/control_margin"
                    android:layout_marginBottom="@dimen/control_margin"
                    android:padding="@dimen/control_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/tVCategory"
                    android:clickable="true"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:text="#Choose category" />

                <TextView
                    android:layout_marginTop="@dimen/control_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/tVMessageAsk"
                    android:text="" />

                <Button
                    android:layout_marginTop="@dimen/control_margin"
                    android:id="@+id/btnOkAsk"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/button_label_ask"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:background="@color/blue_500" />

            </LinearLayout>
        </ScrollView>
