<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="fill" android:background="@drawable/list_item_background_without_arrow">

    <com.xavey.woody.helper.RoundedImageView
        android:id="@+id/ivContactContI"
        android:scaleType="fitCenter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="@string/info_button_description"
        android:layout_marginLeft="@dimen/control_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingTop="2dp"
        />

    <TextView android:id="@+id/tVContactNameContI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/control_margin"
        android:layout_marginTop="@dimen/control_close_margin"
        android:layout_alignBaseline="@+id/ivContactContI"
        android:layout_toRightOf="@id/ivContactContI"
        android:layout_toEndOf="@id/ivContactContI"
        android:text="loading..."
        android:singleLine="true"
        android:textStyle="bold"
        android:ellipsize="end"
        />

    <TextView android:id="@+id/tVContactNoContI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:singleLine="true"
        android:layout_marginLeft="@dimen/control_margin"
        android:layout_marginBottom="@dimen/control_margin"
        android:layout_below="@+id/tVContactNameContI"
        android:layout_toRightOf="@id/ivContactContI"
        android:clickable="true"
        android:paddingBottom="5dp"
        android:paddingRight="5dp" />

    <Button android:id="@+id/btnInviteContI" style="?android:textAppearanceSmall"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/action_invite"
        android:textColor="@color/text_primary"
        android:background="@color/blue_500"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>