<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@color/accent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:id="@+id/btnInvite" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/action_fb_invite"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:background="@color/blue_500"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/control_margin"
        android:paddingRight="@dimen/control_margin"
        android:layout_gravity="top|center" />

    <LinearLayout
        android:id="@+id/llListHolderFr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:background="@color/accent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    </LinearLayout>
</LinearLayout>